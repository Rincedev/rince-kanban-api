{
  "name": "rince-kanban-api",
  "engines": {
    "node": "22.x"
  },
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "node --watch index.js",
    "start": "node index.js",
    "db:create": "node src/migrations/createTables.js",
    "db:seed": "node src/migrations/seedTables.js",
    "db:reset": "npm run db:create && npm run db:seed"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-xss-sanitizer": "^2.0.0",
    "joi": "^17.13.3",
    "pg": "^8.13.3",
    "sequelize": "^6.37.6"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": "*.json",
        "options": {
          "parser": "json",
          "tabWidth": 4
        }
      }
    ],
    "semi": true,
    "requirePragma": false,
    "proseWrap": "preserve",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "quoteProps": "as-needed"
  }
}